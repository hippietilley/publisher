<% if post.public? || signed_in? %>
  <%= content_tag (in_a_list? ? :li : :div) do %>
    <%= content_tag :article, post_id_and_classes(post) do %>

      <%= render "/posts/header", post: post %>
      <%= render post.post_type, post: post.post_type %>
      <%= render "/posts/footer", post: post %>

      <%= link_to "Edit", edit_post_path(post), class: "edit" if signed_in? %>

    <% end %>
  <% end %>
<% end %>
