<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this note from being saved:</h2>

    <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= f.label :content %><br>
  <%= f.text_area :content %>
</div>
<div class="field">
  <%= f.label :slug %><br>
  <%= f.text_field :slug %>
</div>
<div class="field">
  <%= f.label :in_reply_to %><br>
  <%= f.text_field :in_reply_to %>
</div>
<div class="field">
  <%= f.label :tags %><br>
  <%= text_field_tag :tags, @post.tags.map(&:name).join(", ") %>
</div>
<div class="field">
  <%= f.label :published_at %><br>
  <%= f.datetime_select :published_at %>
</div>
<div class="field">
  <%= f.label :private %>
  <%= f.check_box :private %>
</div>
<div class="actions">
  <%= link_to "Cancel", notes_url %>
  <%= f.submit %>
</div>
