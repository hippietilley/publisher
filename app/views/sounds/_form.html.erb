<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this sound from being saved:</h2>

    <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :subtitle %><br>
  <%= f.text_field :subtitle %>
</div>
<div class="field">
  <%= f.label :content %><br>
  <%= f.text_area :content %>
</div>
<div class="field">
  <%= f.label :slug %><br>
  <%= f.text_field :slug %>
</div>
<div class="field">
  <%= f.label :in_reply_to %><br>
  <%= f.text_field :in_reply_to %>
</div>
<div class="field">
  <%= f.label :tags %><br>
  <%= text_field_tag :tags, @post.tags.map(&:name).join(", ") %>
</div>
<div class="field">
  <%= f.label :published_at %><br>
  <%= f.datetime_select :published_at %>
</div>
<div class="field">
  <%= f.label :private %>
  <%= f.check_box :private %>
</div>
<div class="field">
  <%= f.label :image_url, "Image URL" %><br>
  <%= f.url_field :image_url %>
</div>
<div class="field">
  <%= f.label :duration %><br>
  <%= f.number_field :duration %>
</div>
<div class="field">
  <%= f.label :captured_at %><br>
  <%= f.datetime_select :captured_at, include_blank: true %>
</div>
<div class="field">
  <%= f.label :enclosure_url, "Enclosure URL" %><br>
  <%= f.url_field :enclosure_url %>
</div>
<div class="actions">
  <%= link_to "Cancel", sounds_url %>
  <%= f.submit %>
</div>
